-- Fun√ß√£o para exibir a mensagem na tela
local StarterGui = game:GetService("StarterGui")
StarterGui:SetCore("SendNotification", {
    Title = "beabadoobee",
    Text = "Script created by beabadoobee",
    Duration = 4
})

-- Fun√ß√£o para centralizar e aumentar a mensagem
local function showMessage()
    local message = Instance.new("TextLabel")
    message.Parent = game.CoreGui
    message.Text = "Script created by beabadoobee"
    message.TextColor3 = Color3.fromRGB(255, 255, 255) -- Cor branca
    message.TextSize = 40 -- Tamanho da fonte maior
    message.TextStrokeTransparency = 0.5
    message.TextStrokeColor3 = Color3.fromRGB(0, 0, 0) -- Cor da borda (preto)
    message.Size = UDim2.new(0, 600, 0, 100) -- Tamanho da caixa de texto
    message.Position = UDim2.new(0.5, -300, 0.5, -50) -- Centralizado na tela
    message.AnchorPoint = Vector2.new(0.5, 0.5) -- Centraliza a posi√ß√£o
    message.BackgroundTransparency = 1 -- Fundo transparente

    wait(4) -- Mensagem ficar√° na tela por 4 segundos
    message:Destroy() -- Remove a mensagem ap√≥s 4 segundos
end

-- Chama a fun√ß√£o para exibir a mensagem
showMessage()

-- Parry Function
local function doParry()
    local ReplicatedStorage = game:GetService("ReplicatedStorage")
    local parryRemote = ReplicatedStorage:FindFirstChild("Remotes") and ReplicatedStorage.Remotes:FindFirstChild("Parry")
    if parryRemote then
        parryRemote:FireServer()
    end
end

-- Auto Parry Logic
local function autoParry()
    local RunService = game:GetService("RunService")
    local LocalPlayer = game.Players.LocalPlayer
    local Ball = workspace:FindFirstChild("Ball")

    RunService.RenderStepped:Connect(function()
        if Ball and LocalPlayer.Character then
            local playerPos = LocalPlayer.Character.HumanoidRootPart.Position
            local ballPos = Ball.Position
            local distance = (playerPos - ballPos).Magnitude
            local ballSpeed = Ball.Velocity.Magnitude

            -- Trigger Parry when ball is near and moving fast
            if distance < 20 and ballSpeed > 10 then
                doParry()
            end
        end
    end)
end

-- Activate Auto Parry
autoParry()
